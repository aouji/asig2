<%= form_for [@proj,@discussion,@comment] do |f| %>
  <% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
      <li class='rederror'><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div><%= f.label :title, "Comment title" %>
    <br>
    <%= f.text_field :title%>
  </div>
    <br>
  <div>
    <%= f.label :body, "Comment text" %>
    <br>
    <%= f.text_area :body  %>
  </div>
  <%= f.submit "Save" %>
<% end %>