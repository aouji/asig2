<h2>Task <%=@task.id%> details</h2>
<dl>
  <dt>Task Name:</dt>
    <dd><%= @task.name %></dd>
  <dt>Description:</dt>
    <dd><%= @task.description %></dd>
  <dt>Due Date:</dt>
    <dd><%= @task.due %></dd>
  <dt>Status:</dt>
    <dd><%= @task.complete? %></dd>
  <dt>Assignees:</dt>
<% @task.assignees.each do |assignee| %>
    <dd><%= assignee.email %></dd>
<% end %>
<% if current_user.can_modify_task? @task %>
  <%= link_to "Add or remove assignees",project_task_assignees_path(@proj,@task) %>
  <%= link_to("modify",edit_project_task_path(@proj,@task))%>
  <%= link_to("Delete task",project_task_path(@proj,@task),method: :delete, data: {confirm: "Are you sure you want to delete this?"}) %>
<%end%>
<%= render "change_status" %>
</dl>
<%= link_to "Back to tasks page for project #{@proj.id}", project_tasks_path(@proj) %>